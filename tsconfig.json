{
  "extends": "@21epub/configs/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "noEmit": false,
    "declaration": true,
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "docs/": ["docs"],
      "docs/*": ["docs/*"],
      "src": ["src"],
      "src/*": ["src/*"],
      "@21epub/utils": ["src"],
      "@21epub/utils/*": ["src/*"]
    },
    "types": ["jest"]
  },
  "include": [
    ".dumi/**/*",
    ".dumirc.ts",
    "src/**/*",
    "docs/**/*",
    ".eslintrc.js",
    "jest.config.ts",
    "babel.config.js"
  ]
}
